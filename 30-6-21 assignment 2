import java.io.*;
import java.util.*;
class Harshadnumber {
    public static void main(String[] args) 
    {
    int n,r=0,sum=0;
    Scanner sc=new Scanner(System.in);
    n=sc.nextInt();
    while(n!=0)
    {
        r=n%10;
        sum=r+r;
        n/=10;
    }
    if(n%sum==0)
    {
     System.out.println("Harshad Number"); 
    }
     else
     {
     System.out.println("Not Harshad Number");
     }
    }
}
